---
import Introduce from '@/components/Introduce.astro';
import Header from '../components/Header.astro';
import { ViewTransitions } from 'astro:transitions'
import Title from '@/components/Title.astro';
import '../styles/main.css'
import Projects from '@/components/Projects.astro';
import Experience from '@/components/Experience.astro';
import AboutMe from '@/components/AboutMe.astro';
interface Props {
	title: string;
}

const { title= "Portafolio de ivanrice" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="ivanrice/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <ViewTransitions  />
	</head>
  <!--dark/light -->
	<body class="flex">
    <div class="bg-backImg w-dvw min-h-dvh flex justify-center items-center 2xl:p-8  h-full overflow-auto">
      <div
        id="introduce"
        class="bg-american-blue-600 border-[1.5rem] border-ottoman-50 relative flex flex-col w-full h-full bg-center items-center
        bg-cover rounded-[2rem] sm:rounded-[4rem] lg:shadow-bg px-8 md:px-16 pt-52 md:pt-72 max-w-screen-2xl overflow-hidden z-0"
      >
        <div id="header-static" class="block">
          <Header state="static" />
        </div>
        <div id="header-fixed" class="hidden">
          <Header state="fixed" />
        </div>
        <main class="w-full max-w-screen-md">
          <section class="section-menu pb-20 lg:pb-24">
            <Introduce />
            <div id="spotlight" aria-hidden class="bg-american-blue-650/50 absolute w-3/4 h-[37rem] rounded-s-full blur-3xl -z-10 -rotate-12 translate-x-1/3 translate-y-36 right-0"></div>
          </section>
          <section id="experience" class="section-menu relative">
            <div id="spotlight1" aria-hidden class="bg-american-blue-550/30 absolute w-3/4 h-[37rem] rounded-e-full blur-2xl -z-10 -rotate-12 -translate-x-2/3 translate-y-36"></div>
            <div id="spotlight2" aria-hidden class="bg-ottoman-400/5 absolute w-2/3 h-72 rounded-full blur-2xl -z-10 -rotate-12 -translate-x-2/4 translate-y-48"></div>
            <Title caption="Experiencia" />
            <Experience />
          </section>
          <section id="projects" class="section-menu relative">
            <Title caption="Proyectos" />
            <div id="spotlight3" aria-hidden class="bg-american-blue-550/30 absolute w-[120%] h-[35rem] rounded-e-full blur-2xl -z-10 -rotate-[36deg] -translate-x-1/2 translate-y-80"></div>
            <div id="spotlight4" aria-hidden class="bg-pink-400/5 absolute w-2/3 h-60 rounded-full blur-3xl -z-10 -rotate-[36deg] -translate-x-1/2 translate-y-96"></div>
            <Projects />
          </section>
          <section  id="aboutme"  class="section-menu">
            <Title caption="Sobre Mi" />
            <AboutMe />
          </section>
          <slot />
        </main>
        <div class="absolute inset-0  overflow-hidden animate-fadeIn -z-10" aria-hidden="true">
          <picture>
            <source srcset="/ivanrice/shadow.avif" type="image/avif">
            <img src="/ivanrice/shadow.png" alt="fill background" class="w-full h-full object-cover bg-center bg-cover absolute -left-6 -right-2 -top-5 -bottom-2 animate-wave-shadow">
          </picture>
          <div ></div>
        </div>
      </div>
    </div>

    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
	</body>

  <script>
  </script>
</html>
<style is:global>
	:root {
	}
  .scrollbar-hide::-webkit-scrollbar {
      display: none;
  }
  /* For IE, Edge and Firefox */
  .scrollbar-hide {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
  }
	html {
    font-family: 'Neucha', cursive;
		background: #13151a;
		background-size: 224px;
    scroll-behavior: smooth;
	}
  body {
    overscroll-behavior: none;
  }
  @media (prefers-reduced-motion: reduce){
    html {
      scroll-behavior: auto;
    }
  }
  [aria-selected="true"] {
   color: #2d3432;
   font-weight: 600;
   border-bottom: 2px solid #5d6d69;
  }
</style>
<script >
  import { Debounce } from "@/utils"
  import { fixedHeader } from "@/scripts"
  document.addEventListener("astro:page-load", () => {
    const headerStatic = document.getElementById("header-static");
    const headerFixed = document.getElementById("header-fixed");
    if (!headerStatic || !headerFixed) throw new Error("Header Element Not found.");
    const options = {
      delay: 12,
      callback: () => fixedHeader({headerStatic,headerFixed})
    }
    const fixedHeaderDebounced = Debounce(options)
    window.addEventListener('scroll', () => {
      fixedHeaderDebounced()
    })
  })
</script>
