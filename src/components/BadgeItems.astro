---
interface Props {
  items: { src: string; text: string }[]
}
const { items } = Astro.props
---

<div class={`flex flex-wrap gap-1 font-biryani font-extralight`}>
  {
    items.map((item) => {
      return (
        <div class="flex flex-wrap gap-1.5">
          <span class="rounded border border-blue-400/50 bg-purple-500/20 px-1.5 py-1 text-[0.66rem] text-pink-100">
            <div class="flex items-center justify-center gap-1">
              <img src={item.src} width={16} height={16} class="object-contain" alt={item.text} />
              <span class="m-0 flex translate-y-0.5 items-center justify-center p-0 leading-none capitalize">
                {item.text}
              </span>
            </div>
          </span>
        </div>
      )
    })
  }
</div>
