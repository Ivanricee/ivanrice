---
interface Experience {
  company: string
  role: string
  time: string
  description: string
  isLatest: boolean
}
const experiences: Experience[] = [
  {
    role:'Freelance',
    company:'',
    time:'Agosto 2021 ',
    description:'Generalista 3D y desarrollador Frontend: Creación y texturizado de props 3D, solución de bugs, implementación de nuevas funcionalidades y mejoras en accesibilidad. Compromiso continuo con el aprendizaje y estudio para estar al día con las últimas tendencias en 3D y frontend. ',
    isLatest: true
  },
  {
    role:'Ssr. Frontend Developer',
    company:'SNGULAR',
    time:'Abril - julio 2021 ',
    description:'Adopté herramientas de Frontend, trabajé en equipo con SCRUM, gestioné tareas con Kanban y extendí componentes existentes. Demostré flexibilidad, compromiso con mejores prácticas y habilidades organizativas. ',
    isLatest: false
  },
  {
    role:'Fullstack Developer',
    company:'Campus Virtuales',
    time:'Octubre 2013 - octubre 2019 ',
    description:'Lideré el desarrollo de proyectos, creé herramientas internas y para clientes, y gestioné el mantenimiento de aplicaciones. Apliqué nuevas herramientas tecnológicas para mejorar la eficiencia, adopté tecnologías emergentes, y mantuve mi aprendizaje para estar al día con las tendencias en frontend y backend.',
    isLatest: false
  }
]
---

<ol class="relative border-s border-roman-400 font-devina">
  {
    experiences.map((experience, i) => {
      const {role, company, time, description,isLatest} = experience
      const isLastExp = experiences.length === i + 1
      return (
      <li class={`flex flex-nowrap ${isLastExp ? 'ms-6':'mb-10 ms-6'} `} >
        <div class="w-4/12">
          <span
            class="absolute flex items-center justify-center w-6 h-6 bg-ottoman-100 rounded-full -start-3 ring-8 ring-roman-400"
          >
            <svg
              class="w-2.5 h-2.5 text-ottoman-800"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
              ></path>
            </svg>
          </span>
          <h3 class="flex flex-col justify-center mb-1 text-2xl font-semibold text-roman-50 text-pretty">
            <span class="flex items-center text-ottoman-50/90">
              {role}
              {
                isLatest &&
                (<span class="bg-ottoman-100 text-ottoman-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded  ms-3">
                  Actualmente
                </span>)
              }
            </span>
            <span class="text-xl">
              {company}
            </span>
          </h3>
          <time class="block mb-2 text-sm font-normal leading-none text-roman-300">
            {time}
          </time>
        </div>
        <div class="w-8/12">
          <p class="mb-4 text-lg font-normal text-roman-200 text-balance">
            {description}
          </p>
        </div>
      </li>
      )
    })
  }

</ol>
<div class="flex pt-5  justify-center">
  <a
   href="#"
   class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
  >
   <svg
     class="w-3.5 h-3.5 me-2.5"
     aria-hidden="true"
     xmlns="http://www.w3.org/2000/svg"
     fill="currentColor"
     viewBox="0 0 20 20"
   >
    <path
      d="M14.707 7.793a1 1 0 0 0-1.414 0L11 10.086V1.5a1 1 0 0 0-2 0v8.586L6.707 7.793a1 1 0 1 0-1.414 1.414l4 4a1 1 0 0 0 1.416 0l4-4a1 1 0 0 0-.002-1.414Z"
    ></path>
    <path
      d="M18 12h-2.55l-2.975 2.975a3.5 3.5 0 0 1-4.95 0L4.55 12H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-4a2 2 0 0 0-2-2Zm-3 5a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"
    ></path>
