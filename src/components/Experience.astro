---
interface Experience {
  company: string
  role: string
  time: string
  description: string
  isLatest: boolean
}

const experiences: Experience[] = [
  {
    role: 'Freelance',
    company: '',
    time: 'Agosto 2021 - Presente',
    description:
      'Como freelance, desarrollo interfaces con JavaScript y React, mejorando componentes, accesibilidad y escalabilidad. Me mantengo activo en comunidades para seguir aprendiendo y también aplico conocimientos en 3D cuando el proyecto lo requiere.',
    isLatest: true,
  },
  {
    role: 'Ssr. Frontend Developer',
    company: 'SNGULAR',
    time: 'Abril - julio 2021 ',
    description:
      'Colaboré en equipo para mejorar el sistema de diseño, implementando componentes con buenas prácticas y resolviendo problemas de UI/UX. Mostré flexibilidad, organización y compromiso con la calidad del desarrollo.',
    isLatest: false,
  },
  {
    role: 'Fullstack Developer',
    company: 'Campus Virtuales',
    time: 'Oct. 2013 - Oct. 2019 ',
    description:
      'Lideré el área de programación, desarrollando herramientas Backend y Frontend, además de gestionar el mantenimiento de aplicaciones. Implementé nuevas tecnologías para mejorar la eficiencia del equipo y promoví la colaboración con el equipo de diseño, manteniéndome actualizado en las tendencias de desarrollo.',
    isLatest: false,
  },
]
---

<div class="font-body relative mx-auto grid pr-4 sm:grid-cols-[auto_1fr] sm:gap-x-5 sm:pr-0">
  <div
    class="pointer-events-none absolute top-0 bottom-0 left-0 z-10 block w-7 bg-orange-400/40 blur-3xl sm:hidden"
  >
  </div>
  {
    experiences.map((experience) => {
      const { role, company, time, description, isLatest } = experience
      return (
        <>
          <div class="font-title relative text-right text-[0.75rem] text-orange-500 sm:text-sm">
            {time}
            <div class="absolute top-1/2 -right-5 hidden h-px w-4 bg-orange-500 sm:block" />
            <div class="absolute top-1.5 right-0 z-10 hidden h-2.5 w-2.5 translate-x-6.5 bg-orange-500 sm:block" />
            <div class="pointer-events-none absolute inset-0 left-32 z-10 hidden w-full bg-orange-400/10 blur-3xl sm:block" />
          </div>

          <div
            class="font-title relative overflow-hidden border-l border-orange-50/15 pb-10 pl-5
          before:absolute before:inset-0 before:rounded-r-sm before:bg-linear-[160deg]
          before:from-orange-400/5 before:to-transparent before:to-60% before:opacity-0
          before:transition-opacity before:duration-700 before:ease-in-out before:content-['']
          hover:before:opacity-100"
          >
            {role && (
              <h3 class="bg-gradient-to-r from-orange-400 from-25% to-transparent to-110% bg-clip-text text-lg font-bold text-transparent sm:to-95% sm:text-xl">
                {role}
              </h3>
            )}
            <h4 class="text-sm text-orange-50/70 sm:text-base">{company}</h4>
            <p class="font-body mt-3 border-l-2 border-orange-50/15 pl-4  text-[0.75rem] text-orange-50/85 sm:text-sm">
              {description}
            </p>
          </div>
        </>
      )
    })
  }
</div>
